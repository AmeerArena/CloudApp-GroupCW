<%- include('header'); -%>

<div class="mx-auto" style="max-width: 720px;">
  <h1 class="title mb-4 text-center">Register as Lecturer</h1>

  <div class="card p-4">
    <form action="/api/lecturer/hire" method="post">
      <div class="mb-3">
        <input class="form-control form-control-lg" type="text" name="name" placeholder="(username)" required>
      </div>

      <div class="mb-3">
        <input class="form-control form-control-lg" type="password" name="password" placeholder="(password)" required>
      </div>

      <div class="mb-3">
        <input class="form-control form-control-lg" type="text" name="modules" placeholder="modules (max 3) e.g. COMP3207, COMP3208" required>
      </div>

      <div class="d-grid">
        <button class="btn btn-outline-dark btn-lg" type="submit">register</button>
      </div>

      <div class="text-center text-danger mt-3" style="min-height: 24px;">
        <%= error ? error : '[error messages]' %>
      </div>
    </form>
  </div>

  <div class="text-center mt-4">
    <a class="btn btn-outline-dark btn-lg px-5" href="/login">back to login</a>
  </div>
</div>

<%- include('footer'); -%>
